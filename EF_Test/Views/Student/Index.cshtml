@model IEnumerable<EF_Test.Models.StudentModel>
@{
	ViewData["Title"] = "Öğrenci Listesi";
}

<h1>@ViewData["Title"]</h1>

<p>
	<a asp-action="Add" class="btn btn-primary" style="float: right;">Yeni Öğrenci Ekle</a>
</p>

<table class="table table-striped">
	<thead>
		<tr>
			<th> 
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.SchoolNumber)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Department)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Grade)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.SchoolNumber)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Department)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Grade)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
					<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm ms-1">Sil</a>
				</td>
			</tr>
		}
	</tbody>
</table>

